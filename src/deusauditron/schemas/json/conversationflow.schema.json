{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "ConversationFlowConfig",
  "type": "object",
  "properties": {
    "type": { "type": "string", "const": "conversationflow" },
    "name": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "global": {
      "$ref": "references/global.schema.json"
    },
    "entry_node": {
      "type": "string"
    },
    "knowledge_bases": {
      "type": "array",
      "items": {
        "$ref": "references/redis_knowledgebase.schema.json"
      }
    },
    "nodes": {
      "type": "array",
      "items": {
        "oneOf": [
          { "$ref": "references/llm_node_for_conversation.schema.json" },
          { "$ref": "references/code_node.schema.json" },
          { "$ref": "references/vector_store_node.schema.json" }
        ]
      },
      "minItems": 1,
      "contains": {
        "$ref": "references/llm_node.schema.json"
      }
    },
    "evaluation": {
      "$ref": "references/evaluation.schema.json"
    }
  },
  "required": ["type", "name", "version", "global", "entry_node", "nodes"]
}
