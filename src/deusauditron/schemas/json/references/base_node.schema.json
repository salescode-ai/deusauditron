{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "BaseNodeConfig",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "type": {
      "type": "string",
      "enum": ["LLMNode", "CodeNode", "VectorStoreNode"]
    },
    "description": { "type": "string" },
    "position": { "$ref": "position.schema.json" },
    "pre_callback": { "type": "string" },
    "post_callback": { "type": "string" },
    "emit_output": { "type": "boolean" }
  },
  "required": ["name", "type"],
  "additionalProperties": false
}
