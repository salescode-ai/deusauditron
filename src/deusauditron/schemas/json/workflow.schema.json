{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "WorkflowConfig",
  "allOf": [
    {
      "type": "object",
      "properties": {
        "type": { "type": "string", "const": "workflow" },
        "name": { "type": "string" },
        "version": { "type": "string" },
        "global": { "$ref": "references/global.schema.json" },
        "entry_node": { "type": "string" },
        "knowledge_bases": {
          "type": "array",
          "items": { "$ref": "references/redis_knowledgebase.schema.json" }
        },
        "workflow_edges": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "from": { "type": "string" },
              "to": { "type": "string" }
            },
            "required": ["from", "to"],
            "additionalProperties": false
          }
        },
        "nodes": {
          "type": "array",
          "minItems": 1,
          "items": {
            "oneOf": [
              { "$ref": "references/llm_node_for_workflow.schema.json" },
              { "$ref": "references/code_node.schema.json" },
              { "$ref": "references/vector_store_node.schema.json" }
            ]
          }
        },
        "evaluation": {
          "$ref": "references/evaluation.schema.json"
        }
      },
      "required": [
        "type",
        "name",
        "version",
        "global",
        "entry_node",
        "nodes"
      ],
      "additionalProperties": false
    },
    {
      "if": {
        "properties": {
          "nodes": {
            "type": "array",
            "minItems": 2
          }
        }
      },
      "then": {
        "required": ["workflow_edges"]
      }
    }
  ]
}
